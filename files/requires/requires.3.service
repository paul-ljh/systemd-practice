[Unit]
# Requires= & After= are often specified together,
# to ensure requires.2.service will not start until requires.1.service activated successfully
# if requires.1.service is explicitly stopped via "systemctl stop third.service", requires.2.service will also be stopped
Requires=requires.1.service
After=requires.1.service

[Service]
Type=oneshot
RemainAfterExit=true
ExecStart=sleep 1
ExecStop=sleep 1
